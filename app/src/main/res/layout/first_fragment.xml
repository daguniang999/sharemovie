<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_height="170dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewpager_pic"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">
                        </android.support.v4.view.ViewPager>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal"

                            android:layout_below="@+id/viewpager_pic"
                            android:gravity="center_horizontal|center_vertical"
                            android:id="@+id/layout" >
                        </LinearLayout>

                </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <android.support.v7.widget.CardView
                  android:layout_width="0dp"
                  android:id="@+id/card_1"
                  android:layout_margin="1dp"
                  android:layout_height="60dp"
                  android:layout_weight="1">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="40dp"
                      android:layout_gravity="center"
                      android:src="@drawable/d1" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="剧情" />
                  </LinearLayout>
              </android.support.v7.widget.CardView>
              <android.support.v7.widget.CardView
                  android:layout_width="0dp"
                  android:id="@+id/card_2"
                  android:layout_margin="1dp"
                  android:layout_height="60dp"
                  android:layout_weight="1">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="40dp"
                          android:layout_gravity="center"
                          android:src="@drawable/d2" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="喜剧" />
                  </LinearLayout>
              </android.support.v7.widget.CardView>

              <android.support.v7.widget.CardView
                  android:layout_width="0dp"
                  android:id="@+id/card_3"
                  android:layout_margin="1dp"
                  android:layout_height="60dp"
                  android:layout_weight="1">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="40dp"
                          android:layout_gravity="center"
                          android:src="@drawable/d3" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="爱情" />
                  </LinearLayout>
              </android.support.v7.widget.CardView>

              <android.support.v7.widget.CardView
                  android:layout_width="0dp"
                  android:id="@+id/card_4"
                  android:layout_margin="1dp"
                  android:layout_height="60dp"
                  android:layout_weight="1">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="40dp"
                          android:layout_gravity="center"
                          android:src="@drawable/d4"/>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="传记" />
                  </LinearLayout>
              </android.support.v7.widget.CardView>

          </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/card_5"
                    android:layout_margin="1dp"
                    android:layout_height="60dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/d5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="动作" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/card_6"
                    android:layout_margin="1dp"
                    android:layout_height="60dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/d6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="历史" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/card_7"
                    android:layout_margin="1dp"
                    android:layout_height="60dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/d7" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="科幻" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/card_8"
                    android:layout_margin="1dp"
                    android:layout_height="60dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/d8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="奇幻" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rela"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    app:cardElevation="0dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/card_find"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/find_back"
                        android:scaleType="center"
                        android:layout_height="match_parent" />


                </android.support.v7.widget.CardView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/find"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/text_find"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:id="@+id/text_find"
                    android:text="电影搜索"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"

                    />

            </RelativeLayout>




        </LinearLayout>

    </LinearLayout>
</ScrollView>

</LinearLayout>